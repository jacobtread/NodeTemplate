{
  "name": "node-template",
  "version": "0.0.1",
  "description": "My personal template for creating future node projects that will use typescript etc",
  "main": "app.js",
  "author": "Jacobtread",
  "license": "MIT",
  "type": "module",
  "private": false,
  "scripts": {
    "start": "npm run debug",
    "debug": "npm run build:live",
    "build": "tsc -p .",
    "build:live": "nodemon --watch 'src/**/*.ts' --exec \"ts-node\" src/app.ts"
  },
  "devDependencies": {
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4"
  }
}
